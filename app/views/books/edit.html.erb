<h1>Edit Book</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <%= form.submit "Update Book" %>
<% end %>

<%= link_to "Back to Book", @book %>
<%= link_to "Back to Books", books_path %>
